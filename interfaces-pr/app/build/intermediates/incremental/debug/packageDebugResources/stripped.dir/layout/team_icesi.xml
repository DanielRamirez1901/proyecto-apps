<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shield_teamImg"
        android:layout_width="252dp"
        android:layout_height="196dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_teamImg"
        android:layout_width="216dp"
        android:layout_height="242dp"
        app:layout_constraintEnd_toEndOf="@+id/shield_teamImg"
        app:layout_constraintStart_toStartOf="@+id/shield_teamImg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/player_nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shield_teamImg"
        app:layout_constraintStart_toStartOf="@+id/shield_teamImg"
        app:layout_constraintTop_toBottomOf="@+id/profile_teamImg" />

    <TextView
        android:id="@+id/role_teamTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/shield_teamImg"
        app:layout_constraintStart_toStartOf="@+id/shield_teamImg"
        app:layout_constraintTop_toBottomOf="@+id/player_nameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>