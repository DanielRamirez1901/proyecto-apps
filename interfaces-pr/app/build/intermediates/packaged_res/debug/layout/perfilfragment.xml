<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:layerType="none"
        android:translationY="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/baloncestobanner"
            android:scaleType="center"
            android:translationY="-20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        app:cardCornerRadius="150dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <ImageView
            android:id="@+id/perfil_edit_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/foto_perfil" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autoSizeTextType="uniform"
        android:text="Amilcar Rodriguez"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ingeniero telemático"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/career">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="20dp"
            android:translationY="25dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pastel" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="90dp"
            android:translationY="25dp" />

        <TextView
            android:id="@+id/description_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:translationX="90dp"
            android:translationY="50dp" />

        <ImageButton
            android:id="@+id/edit_nacimiento_Button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:scaleType="centerInside"
            android:translationX="340dp"
            android:translationY="30dp"
            app:srcCompat="@drawable/pencil_icon_edit" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <ImageButton
            android:id="@+id/edit_telefono_Button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:scaleType="centerInside"
            android:translationX="340dp"
            android:translationY="30dp"
            app:srcCompat="@drawable/pencil_icon_edit" />

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="20dp"
            android:translationY="25dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/celular_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/celular_icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de teléfono:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="90dp"
            android:translationY="25dp" />

        <TextView
            android:id="@+id/celular_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:translationX="90dp"
            android:translationY="50dp" />

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/editIMG"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Descripción accesible del ImageButton"
        android:translationX="-20dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:srcCompat="@drawable/edit_perfil_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>