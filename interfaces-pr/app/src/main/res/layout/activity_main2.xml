<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="20dp"
    tools:context=".MainActivity2">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/back_login_color" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="191dp"
        android:layout_height="174dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="BIENVENIDO"
        android:textColor="#011769"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Ingresa para continuar"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/banner_circle"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nada"
        app:layout_constraintVertical_bias="0.97">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/nada"
        android:layout_width="371dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/banner_login"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <ImageView
        android:id="@+id/loginBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/banner_circle_blue"
        android:elevation="8dp"
        android:padding="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/frameLayout2"
        android:src="@drawable/abajo"
        tools:visibility="visible"
        android:onClick="irASegundaActivity"/>

    <TextView
        android:id="@+id/iniciarSesiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="INICIAR SESION"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/nada"
        app:layout_constraintTop_toTopOf="@+id/nada" />

    <TextView
        android:id="@+id/registrarsetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="REGISTRARSE"
        android:textColor="#818181"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/nada"
        app:layout_constraintStart_toEndOf="@+id/iniciarSesiontxt"
        app:layout_constraintTop_toTopOf="@+id/nada" />

    <FrameLayout
        android:id="@+id/loginContainerFL"
        android:layout_width="347dp"
        android:layout_height="421dp"
        app:layout_constraintBottom_toBottomOf="@+id/nada"
        app:layout_constraintEnd_toEndOf="@+id/nada"
        app:layout_constraintStart_toStartOf="@+id/nada"
        app:layout_constraintTop_toTopOf="@+id/nada"/>


</androidx.constraintlayout.widget.ConstraintLayout>